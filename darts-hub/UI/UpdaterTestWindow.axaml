<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="darts_hub.UI.UpdaterTestWindow"
        Title="Updater Test Interface"
        Width="800"
        Height="600"
        MinWidth="600"
        MinHeight="400"
        Background="#FF2D2D30"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1E1E1E" Padding="20,15">
            <StackPanel>
                <TextBlock Text="🔧 Updater Test Interface"
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Test the update functionality of darts-hub"
                          FontSize="12"
                          Foreground="#CCCCCC"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20" Background="#FF252526">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Control Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,15">
                <Button Name="FullTestButton"
                        Content="🔍 Full Test"
                        Padding="15,8"
                        Margin="5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="5"/>
                
                <Button Name="VersionTestButton"
                        Content="📋 Version Check"
                        Padding="15,8"
                        Margin="5"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="5"/>
                
                <Button Name="RetryTestButton"
                        Content="🔄 Retry Test"
                        Padding="15,8"
                        Margin="5"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="5"/>
                
                <Button Name="ClearLogButton"
                        Content="🗑️ Clear Log"
                        Padding="15,8"
                        Margin="5"
                        Background="#757575"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="5"/>
            </StackPanel>
            
            <!-- Log Output -->
            <Border Grid.Row="1" 
                    BorderBrush="#FF3C3C3C" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Background="#FF1E1E1E">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Auto"
                             Background="#FF1E1E1E">
                    <TextBox Name="LogTextBox"
                             Background="#FF1E1E1E"
                             Foreground="#FFCCCCCC"
                             BorderThickness="0"
                             Padding="15"
                             FontFamily="Consolas,Courier New,monospace"
                             FontSize="12"
                             TextWrapping="Wrap"
                             IsReadOnly="True"/>
                </ScrollViewer>
            </Border>
            
            <!-- Progress Bar -->
            <ProgressBar Name="TestProgressBar"
                        Grid.Row="2"
                        Height="6"
                        Margin="0,10,0,0"
                        IsVisible="False"
                        IsIndeterminate="True"
                        Background="#FF3C3C3C"
                        Foreground="#4CAF50"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF1E1E1E" Padding="20,10">
            <StackPanel>
                <TextBlock Text="💡 Instructions:"
                          FontWeight="Bold"
                          FontSize="12"
                          Foreground="White"/>
                <TextBlock Text="• Full Test: Tests all components (Logging, Network, APIs, OS detection, etc.)"
                          FontSize="11"
                          Margin="20,2,0,0"
                          Foreground="#CCCCCC"/>
                <TextBlock Text="• Version Check: Tests only version checking (stable/beta)"
                          FontSize="11"
                          Margin="20,2,0,0"
                          Foreground="#CCCCCC"/>
                <TextBlock Text="• Retry Test: Tests specifically the retry mechanism for network failures"
                          FontSize="11"
                          Margin="20,2,0,0"
                          Foreground="#CCCCCC"/>
                <TextBlock Text="• Tests use real network connections but do not perform actual updates"
                          FontSize="11"
                          Margin="20,2,0,0"
                          Foreground="#999999"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>